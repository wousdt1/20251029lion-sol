{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    "strictNullChecks": false,
    "noImplicitAny": false,
    
    "baseUrl": "./",
    "paths": {
      "@/*":["src/*"],
      "views/*":["src/views/*"],
      "components/*":["src/components/*"],
      "styles/*":["src/styles/*"],
      "router/*":["src/router/*"],
      "store/*":["src/store/*"],
      "config/*":["src/config/*"],
      "assets/*":["src/assets/*"],
      "utils/*":["src/utils/*"],
      "hooks/*":["src/hooks/*"],
      "context/*":["src/context/*"],
    }
  },
  "include": ["src", "public/worker1.js"]
}
